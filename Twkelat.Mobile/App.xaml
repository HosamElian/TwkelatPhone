<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Twkelat.Mobile"
             xmlns:pages="clr-namespace:Twkelat.Mobile.Pages"
             x:Class="Twkelat.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <Shell>
            <TabBar>
                <Tab Title="Home" Icon="tabhome.svg">
                    <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
                </Tab>
                <Tab Title="Settings" Icon="tabsettings.svg">
                    <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"/>
                </Tab>
                <Tab Title="Document" Icon="tabdocument.svg">
                    <ShellContent ContentTemplate="{DataTemplate pages:DocumentPage}"/>
                </Tab>
            </TabBar>
        </Shell>
    </Application.MainPage>
</Application>
