<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Twkelat.Mobile.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout VerticalOptions="Center">
        <StackLayout Background="AliceBlue" Padding="10">
            <Label
                Text="Change Your Secret Code"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Entry HorizontalTextAlignment="Center" IsPassword="True"/>
            
            <Button Text="Confirm"  Clicked="ConirmBT_Clicked"/>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>