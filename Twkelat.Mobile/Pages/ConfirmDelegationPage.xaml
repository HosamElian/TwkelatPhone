<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Twkelat.Mobile.Pages.ConfirmDelegationPage"
             Title="ConfirmDelegationPage">
    <Grid
     Padding="5"
     RowDefinitions="90, *, 50"
     ColumnDefinitions="*">
        <Label Grid.Row="0" Grid.Column="0" Text="Delegation Confirmation" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center"  FontAttributes="Bold"/>
        <ScrollView Orientation="Vertical"
                    Grid.Row="1"
                    Grid.Column="0">
            <Frame BorderColor="Red">
                <Label FontSize="Body" x:Name="entryConfirmText" FontAttributes="Bold" />
            </Frame>
        </ScrollView>

        <Button Text="Sign and Confirm" Grid.Row="2" Grid.Column="0" Clicked="Button_Clicked"/>

    </Grid>
</ContentPage>